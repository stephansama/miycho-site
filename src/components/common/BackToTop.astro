---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@lib/utility";
const { class: className } = Astro.props as HTMLAttributes<"div">;
---

<button
	x-cloak
	x-data="{isWithinScrollRange: false}"
	x-bind:aria-hidden="isWithinScrollRange"
	x-bind:class="{'scale-100': isWithinScrollRange}"
	x-on:click="document.documentElement.scrollTop = 0"
	x-on:scroll.window="isWithinScrollRange = (window.pageYOffset > window.innerHeight * 1.5)"
	aria-label="Send back to top button"
	type="button"
	class={cn(
		"fixed bottom-0 end-0 m-16 flex aspect-square h-8 w-8 scale-0 items-center justify-center rounded-full p-2 bg-orange-500 text-white transition duration-300",
		className
	)}
>
	<i class="icon-[heroicons--chevron-up]"></i>
</button>
